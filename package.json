{
  "name": "fndrs-next-enterprise",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "cross-env FORCE_COLOR=1 next dev --turbo",
    "build": "next build",
    "prepare": "husky install",
    "commitlint": "commitlint",
    "lint:app": "pnpm lint:safe || echo '⚠️ Lint skipped: no valid app/pages dir'",
    "lint:safe": "test -d app || test -d pages && next lint --fix",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "analyze": "cross-env ANALYZE=true pnpm run build",
    "storybook": "cross-env FORCE_COLOR=1 storybook dev -p 6006",
    "test-storybook": "cross-env FORCE_COLOR=1 test-storybook",
    "build-storybook": "cross-env FORCE_COLOR=1 storybook build",
    "test": "cross-env FORCE_COLOR=1 jest --passWithNoTests",
    "e2e:headless": "playwright test",
    "e2e:ui": "playwright test --ui",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "npx patch-package -y",
    "coupling-graph": "npx madge --extensions js,jsx,ts,tsx,css,md,mdx ./ --exclude '.next|tailwind.config.js|reset.d.ts|prettier.config.js|postcss.config.js|playwright.config.ts|next.config.js|next-env.d.ts|instrumentation.ts|e2e/|README.md|.storybook/|.eslintrc.js' --image graph.svg"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "app/**/*.{ts,tsx}": [
      "pnpm run lint:app"
    ]
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@next/bundle-analyzer": "^15.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@vercel/otel": "^1.12.0",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@jest/globals": "^29.7.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "^0.46.0",
    "@opentelemetry/instrumentation": "^0.201.1",
    "@opentelemetry/resources": "2.0.1",
    "@opentelemetry/sdk-logs": "^0.201.1",
    "@opentelemetry/sdk-node": "0.201.1",
    "@opentelemetry/sdk-trace-node": "2.0.1",
    "@opentelemetry/semantic-conventions": "1.34.0",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-controls": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/nextjs": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/test-runner": "^0.21.3",
    "@tailwindcss/postcss": "^4.1.5",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.3.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/jest": "^29.5.10",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "build": "^0.1.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-next": "15.3.3",
    "fetch-mock": "^9.11.0",
    "gzip-size": "6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.0",
    "mkdirp": "^3.0.1",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^22.0.12",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.5",
    "ts-jest": "^29.3.2",
    "tsc": "^2.0.4",
    "typescript": "^5.8.3",
    "yaml": "^2.8.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.1.0"
}
